---
/**
 * Card Component
 * Reusable card wrapper with optional link functionality
 */
interface Props {
    href?: string;
    class?: string;
    padding?: string;
    hover?: boolean;
}

const {
    href,
    class: className = "",
    padding = "p-6",
    hover = true,
} = Astro.props;

const baseClasses =
    "bg-white border border-gray-200 rounded-lg transition-shadow";
const hoverClasses = hover ? "hover:shadow-lg" : "";
const paddingClasses = padding;
const combinedClasses =
    `${baseClasses} ${hoverClasses} ${paddingClasses} ${className}`.trim();
---

{
    href ? (
        <a href={href} class={`${combinedClasses} block hover:border-gray-300`}>
            <slot />
        </a>
    ) : (
        <div class={combinedClasses}>
            <slot />
        </div>
    )
}
