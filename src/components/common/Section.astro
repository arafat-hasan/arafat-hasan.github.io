---
/**
 * Section Component
 * Consistent section wrapper with optional title
 */
interface Props {
  title?: string;
  class?: string;
  id?: string;
}

const { title, class: className = '', id } = Astro.props;
---

<section class={`py-8 ${className}`.trim()} id={id}>
  {title && (
    <h2 class="text-2xl font-bold text-gray-900 mb-6">
      {title}
    </h2>
  )}
  <slot />
</section>
