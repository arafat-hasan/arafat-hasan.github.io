---
/**
 * Badge Component
 * For displaying tags, categories, and labels
 */
interface Props {
  text: string;
  variant?:
    | "default"
    | "tech"
    | "geopolitics"
    | "literature"
    | "philosophy"
    | "fiction"
    | "activities"
    | "other";
  class?: string;
}

const { text, variant = "default", class: className = "" } = Astro.props;

const variantClasses = {
  default: "bg-gray-100 text-gray-700",
  tech: "bg-blue-100 text-blue-700",
  geopolitics: "bg-red-100 text-red-700",
  literature: "bg-green-100 text-green-700",
  philosophy: "bg-purple-100 text-purple-700",
  fiction: "bg-orange-100 text-orange-700",
  activities: "bg-teal-100 text-teal-700",
  other: "bg-gray-100 text-gray-700",
};

const badgeClasses =
  `inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${variantClasses[variant]} ${className}`.trim();
---

<span class={badgeClasses}>
  {text}
</span>
