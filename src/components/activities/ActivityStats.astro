---
/**
 * Activity Stats Component
 * Displays key statistics for an activity (distance, duration, elevation)
 */
interface Props {
  distance?: number; // in km
  duration?: string; // e.g., "4h 30m"
  elevation?: number; // in meters
  class?: string;
}

const { distance, duration, elevation, class: className = '' } = Astro.props;

// Only show if at least one stat is provided
const hasStats = distance || duration || elevation;
---

{hasStats && (
  <div class={`flex flex-wrap gap-6 py-4 px-6 bg-gray-50 rounded-lg border border-gray-200 ${className}`.trim()}>
    {distance && (
      <div class="flex items-center gap-2">
        <span class="text-2xl" aria-hidden="true">üìè</span>
        <div>
          <div class="text-sm text-gray-600">Distance</div>
          <div class="text-lg font-semibold text-gray-900">{distance} km</div>
        </div>
      </div>
    )}
    
    {duration && (
      <div class="flex items-center gap-2">
        <span class="text-2xl" aria-hidden="true">‚è±Ô∏è</span>
        <div>
          <div class="text-sm text-gray-600">Duration</div>
          <div class="text-lg font-semibold text-gray-900">{duration}</div>
        </div>
      </div>
    )}
    
    {elevation && (
      <div class="flex items-center gap-2">
        <span class="text-2xl" aria-hidden="true">‚õ∞Ô∏è</span>
        <div>
          <div class="text-sm text-gray-600">Elevation</div>
          <div class="text-lg font-semibold text-gray-900">{elevation} m</div>
        </div>
      </div>
    )}
  </div>
)}
