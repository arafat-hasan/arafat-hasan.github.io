---
import { FOOTER_LINKS, SITE_CONFIG } from '../config/constants';

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-gray-200 mt-12 sm:mt-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-6 sm:py-8">
    <div class="flex flex-col items-center justify-center gap-3 sm:gap-4 text-sm text-gray-600">
      <p>Â© {currentYear} {SITE_CONFIG.name}. All rights reserved.</p>
      <div class="flex flex-wrap justify-center gap-4 sm:gap-6">
        {FOOTER_LINKS.map((link) => (
          <a 
            href={link.href}
            {...(link.external && { target: '_blank', rel: 'noopener noreferrer' })}
            class="hover:text-gray-900 transition-colors py-2 touch-manipulation"
          >
            {link.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
